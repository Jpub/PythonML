{
    "model" : {
        "min_input_size":       288,
        "max_input_size":       448,
        "labels":               ["raccoon"],
        "anchors":              "anchors.json"
    },

    "train": {
        "train_image_folder":   "./data/training_image/",
        "train_annot_folder":   "./data/training_annotation/",
        "cache_name":           "cache.pkl",
        "anchor_file":          "anchors.json",

        "train_times":          8,
        "batch_size":           16,
        "learning_rate":        1e-4,
        "nb_epochs":            60,
        "warmup_epochs":        2,
        "ignore_thresh":        0.5,
        "gpus":                 "0,1",

        "grid_scales":          [1,1,1],
        "obj_scale":            5,
        "noobj_scale":          1,
        "xywh_scale":           1,
        "class_scale":          1,

        "tensorboard_dir":      "logs",
        "saved_weights_name":   "raccoon.h5",
        "debug":                true
    },

    "valid": {
        "valid_image_folder":   "./data/test_image/",
        "valid_annot_folder":   "./data/test_annotation/",
        "cache_name":           "valid_cache.pkl",

        "valid_times":          1
    },

    "serving": {
        "output_path": "./export/"
    }
}
